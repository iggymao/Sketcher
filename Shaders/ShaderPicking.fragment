// Fragment shader for picking objects
// In this, PickingColor is passed a value based on the meshID
#version 330 core

// Ouput data
out vec4 color;

// Values that stay constant for the whole mesh.
uniform vec3 PickingColor;

void main()
{	
	color = vec4(PickingColor, 1.0);
//	color = vec4(1.0, 0.0, 0.0, 1.0);
}